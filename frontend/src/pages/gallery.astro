---
import GalleryImage from "../components/GalleryImage.astro";
import MainLayout from "../layouts/MainLayout.astro";
import { getAllIllustrations } from "../lib/sanity";

const illustrations = await getAllIllustrations();
---

<MainLayout>
  <ul
    class="mt-6 container md mx-auto columns-1 md:columns-2 lg:columns-3 gallery"
  >
    {
      illustrations.map((i) => (
        <li class="mb-5">
          <GalleryImage illustration={i} />
        </li>
      ))
    }
  </ul>
</MainLayout>
