---
import { getSiteSettings } from "../lib/sanity";
import HamburgerMenu from "./HamburgerMenu.astro";
import NavBar from "./NavBar.astro";

const settings = await getSiteSettings();
---

<header class="container mx-auto pt-5">
  <div class="flex flex-col-reverse justify-between gap-4 md:block">
    <NavBar />
    <div class="flex justify-between gap-5 md:block">
      <div class="md:text-center text-riso-red">
        <h1
          class="text-lg font-semibold uppercase md:mt-2 md:font-bold md:text-3xl"
        >
          <a href="/">{settings.title}</a>
        </h1>
        <h2 class="hidden md:block text-sm">
          {settings.subtitle}
        </h2>
      </div>

      <HamburgerMenu />
    </div>
  </div>
  <div class="mt-6 border-b-2 border-riso-yellow"></div>
</header>
