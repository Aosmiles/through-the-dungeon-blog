---
interface Props {
  href: string;
}

const { href } = Astro.props;
const currentPage = Astro.url.pathname === href;
---

<a
  class:list={["hover:text-riso-red", { "current-page": currentPage }]}
  href={href}><slot /></a
>

<style>
  a {
    text-decoration: none;
  }

  .current-page {
    text-decoration: underline;
  }
</style>
