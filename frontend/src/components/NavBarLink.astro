---
interface Props {
  href: string;
  text: string;
}

const { href, text } = Astro.props;
const currentPage = Astro.url.pathname === href;
---

<a class:list={[{ "current-page": currentPage }]} href={href}>{text}</a>

<style>
  a {
    text-decoration: none;
  }

  .current-page {
    text-decoration: underline;
  }
</style>
